---
import { Image } from 'astro:assets';

interface AdImage {
  src: ImageMetadata;
  alt: string;
}

interface Props {
  images?: AdImage[];
  headline: string;
  text: string;
  ctaHref: string;
  ctaText: string;
  bgcolor?: string; // Optional color for the ad, e.g., `#ff0000`
}

const { images = [], headline, text, ctaHref, ctaText, bgcolor } = Astro.props as Props;
---
<aside class="ad-banner" style={bgcolor ? `border: 2px solid ${bgcolor};` : ''}>
  {images.length > 0 && (
    <div class="graphics">
      {images.map((img, i) => (
        <Image src={img.src} alt={img.alt} width={100} height={100} class:list={[i > 0 && 'offset']} />
      ))}
    </div>
  )}
  <h2 class="headline"><strong>{headline}</strong></h2>
  <p class="ad-text">{text}</p>
  <a class="sl-link-button not-content primary cta" style={bgcolor ? `background-color: ${bgcolor};` : ''} href={ctaHref} target="_blank" rel="noopener noreferrer">{ctaText}</a>
</aside>

<style>
  @layer components {
    .ad-banner {
    padding: 1rem 1rem;
    color: var(--color-accent-950);
    border-radius: 0.3rem;
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    margin: 1rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

    [data-theme='dark'] .ad-banner {
      color: var(--color-accent-200);
      box-shadow: rgba(201, 200, 200, 0.2) 0px 2px 8px 0px;
    }

    .graphics {
      display: flex;
      margin-bottom: 0.5rem;
      object-fit: cover;
      overflow: hidden;
    }
    .graphics :global(img) {
      border-radius: 50%;
    }
    .graphics :global(img.offset) {
      margin-left: -0.5rem;
    }
    .headline h2, .headline strong {
      font-size: var(--sl-text-h5);
      margin-bottom: 0.25rem;
      color: var(--sl-color-text);
    }

    .ad-text {
      font-size: var(--sl-text-body-small);
      margin-bottom: 0.5rem;
      color: var(--sl-color-text);
    }

    .cta {
      margin-top: 0.5rem;
      color: var(--sl-color-black);
      font-weight: bold;
      padding: 0.5rem 1rem;
      border-radius: 2rem;
      text-decoration: none;
    }
  }
</style>
